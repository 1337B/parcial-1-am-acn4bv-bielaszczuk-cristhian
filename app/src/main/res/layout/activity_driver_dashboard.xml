<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Weather Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/text_temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-- Â°C"
                android:textSize="18sp"
                android:textColor="@color/color_on_surface" />

            <TextView
                android:id="@+id/text_precip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-- mm"
                android:textSize="18sp"
                android:textColor="@color/color_on_surface" />

        </LinearLayout>

        <!-- Speed Gauge -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginBottom="16dp">

            <ProgressBar
                android:id="@+id/progress_speed"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_gravity="center"
                android:indeterminate="false"
                android:max="120"
                android:progress="0"
                android:progressDrawable="@drawable/green_progress_bar" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_speed_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="64sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_primary" />

                <TextView
                    android:id="@+id/text_speed_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km/h"
                    android:textSize="16sp"
                    android:textColor="@color/color_on_surface" />

            </LinearLayout>

        </FrameLayout>

        <!-- Offline Weather Switch -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_offline_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use offline weather"
            android:layout_marginBottom="16dp" />

        <!-- Time of Day -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time of Day"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/group_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radio_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Day"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radio_night"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Night" />

        </RadioGroup>

        <!-- Road Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Road Type"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_road"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:minHeight="48dp" />

        <!-- Recalculate Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_recalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recalculate"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:cornerRadius="28dp"
            android:layout_marginBottom="16dp" />

        <!-- Debug Text -->
        <TextView
            android:id="@+id/text_debug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Press Recalculate"
            android:textSize="14sp"
            android:textColor="@color/color_on_surface"
            android:padding="8dp"
            android:background="@color/color_surface" />

    </LinearLayout>

</ScrollView>
