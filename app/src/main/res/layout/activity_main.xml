<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:padding="32dp"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/textGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fleet Safety"
        android:textColor="@color/color_primary"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@id/button_go_driver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_go_driver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Driver Dashboard"
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="16dp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@id/button_go_admin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textGreeting" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_go_admin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Admin Settings"
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_go_driver" />

</androidx.constraintlayout.widget.ConstraintLayout>
